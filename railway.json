{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm run migrate && npm run seed && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "DB_CLIENT": "pg",
        "TABLE_PREFIX": "hd_"
      }
    }
  },
  "services": [
    {
      "name": "htmldrop-cms",
      "plan": "starter"
    }
  ],
  "plugins": [
    {
      "name": "postgresql",
      "plan": "starter"
    }
  ]
}
