{
  "name": "htmldrop",
  "version": "1.0.31",
  "type": "module",
  "main": "core/index.mjs",
  "types": "core/types/index.d.ts",
  "description": "Dynamic Node.js CMS with SSR, plugin system, hooks/filters, multi-database support, and optional WebSockets",
  "author": "Siglar Development AS",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/htmldrop/htmldrop.git"
  },
  "keywords": [
    "cms",
    "nodejs",
    "ssr",
    "plugins",
    "vue",
    "react",
    "wordpress"
  ],
  "scripts": {
    "build": "npm run audit:admin; npm run install:admin; npm run build:admin",
    "build:admin": "npm run build --prefix ./core/admin",
    "install:admin": "npm install --prefix ./core/admin",
    "audit:admin": "npm audit fix --prefix ./core/admin",
    "start": "node core/supervisor.mjs",
    "start:direct": "node core/index.mjs",
    "prod": "node core/supervisor.mjs",
    "dev": "nodemon --config core/config/nodemon.json core/index.mjs",
    "make:migration": "knex --knexfile ./core/knexfile.mjs migrate:make",
    "migrate": "knex --knexfile ./core/knexfile.mjs migrate:latest",
    "rollback": "knex --knexfile ./core/knexfile.mjs migrate:rollback",
    "seed": "knex --knexfile ./core/knexfile.mjs seed:run",
    "lint": "eslint core --config core/config/eslint.config.mjs",
    "lint:fix": "eslint core --fix --config core/config/eslint.config.mjs",
    "format": "prettier --write \"core/**/*.{js,mjs,json}\" --config core/config/.prettierrc.json",
    "format:check": "prettier --check \"core/**/*.{js,mjs,json}\" --config core/config/.prettierrc.json",
    "test": "vitest run --config core/config/vitest.config.mjs",
    "test:watch": "vitest watch --config core/config/vitest.config.mjs",
    "test:ui": "vitest --ui --config core/config/vitest.config.mjs",
    "test:coverage": "vitest run --coverage --config core/config/vitest.config.mjs"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.5.22",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.3.0",
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "cron": "^4.3.4",
    "dotenv": "^17.2.2",
    "esbuild": "^0.25.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "isomorphic-git": "^1.28.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "redoc-express": "^2.1.3",
    "semver": "^7.6.3",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vue": "^3.5.22",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "@vue/eslint-config-prettier": "^10.2.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "happy-dom": "^20.0.10",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
