{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "paths": {
      "*": ["hd-core/types/*"]
    }
  },
  "include": [
    "./**/*.mjs",
    "./**/*.js",
    "../hd-content/**/*.mjs",
    "../hd-content/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "admin/dist", "../node_modules"]
}
