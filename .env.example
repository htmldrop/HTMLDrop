PORT=3001
SALT_ROUNDS=12

# CORS_ORIGIN - Optional. Defaults to * (allow all) if not set.
# For production, set to specific domain(s): https://yourdomain.com
# For multiple domains, use comma-separated: https://domain1.com,https://domain2.com
CORS_ORIGIN=*

JWT_SECRET=jwt-secret
JWT_REFRESH_SECRET=jwt-refresh-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
ALLOW_REGISTRATIONS=false
DEFAULT_ROLES=user
TABLE_PREFIX=hd_
DB_CLIENT=better-sqlite3
DB_CONNECTION={"filename":"./content/config/htmldrop.db"}

# Caching - Optional. Defaults to in-memory cache if not configured.
# CACHE_ENABLED=true
# REDIS_URL=redis://localhost:6379

# File Upload - Optional
# MAX_FILE_SIZE=10485760  # 10MB default
# ALLOWED_FILE_EXTENSIONS=  # Empty/not set = allow all (default). Set to comma-separated list to restrict: jpg,png,gif,pdf

# GitHub Token - Optional. Used for checking CMS updates from GitHub.
# Increases API rate limit from 60 to 5000 requests/hour.
# Can also be set in the database options table as 'github_token' (takes priority over env).
# Create a token at: https://github.com/settings/tokens (only needs 'public_repo' scope)
# GITHUB_TOKEN=ghp_your_token_here

# Performance Tracing - Optional. Tracks request-to-response path for debugging.
# HD_TRACING_ENABLED=true           # Enable/disable tracing (default: true)
# HD_TRACING_SAMPLE_RATE=1.0        # Sampling rate 0.0-1.0 (default: 1.0 = trace all requests)
# HD_TRACING_VERBOSE=false          # Log traces to console (default: false)
# HD_TRACING_PERSIST=false          # Store traces in database (default: false = memory only)
# HD_TRACING_MAX_TRACES=100         # Max traces in memory cache (default: 100)
# HD_TRACING_MAX_AGE_MS=3600000     # Max age of memory traces in ms (default: 1 hour)
# HD_TRACING_RETENTION_DAYS=30      # Days to keep DB traces (default: 30, requires PERSIST=true)
# HD_TRACING_ARCHIVE_AFTER_DAYS=7   # Archive traces older than N days (default: 7, requires PERSIST=true)
# HD_TRACING_ARCHIVE_PATH=./content/traces  # Path for archived trace files