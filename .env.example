PORT=3001
SALT_ROUNDS=12

# CORS_ORIGIN - Optional. Defaults to * (allow all) if not set.
# For production, set to specific domain(s): https://yourdomain.com
# For multiple domains, use comma-separated: https://domain1.com,https://domain2.com
CORS_ORIGIN=*

JWT_SECRET=jwt-secret
JWT_REFRESH_SECRET=jwt-refresh-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
ALLOW_REGISTRATIONS=false
DEFAULT_ROLES=user
TABLE_PREFIX=hd_
DB_CLIENT=better-sqlite3
DB_CONNECTION={"filename":"./hd-content/config/htmldrop.db"}

# Caching - Optional. Defaults to in-memory cache if not configured.
# CACHE_ENABLED=true
# REDIS_URL=redis://localhost:6379

# File Upload - Optional
# MAX_FILE_SIZE=10485760  # 10MB default
# ALLOWED_FILE_EXTENSIONS=  # Empty/not set = allow all (default). Set to comma-separated list to restrict: jpg,png,gif,pdf